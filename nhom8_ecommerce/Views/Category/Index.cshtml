@model List<nhom8_ecommerce.ContactDB.Category>
@{ ViewBag.Title = "Index"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<section class="section-content padding-y">
    <div class="container">

        <nav class="row" >
        @foreach (var item in Model)
        {
            <div class="col-md-4">

                <div class="card_item">
                    <div class="img-wrap" style="background: #ffd7d7">
                        <a href="@Url.Action("ProductCategory","Category", new { @id=item.Id },null)">
                            <img src="~/Public/@item.Img">
                    </div>
                    <div class="card-body">
                        <h4 class="card-title"><a href="@Url.Action("ProductCategory","Category", new { @id=item.Id },null)">@item.Name</a></h4>
                    </div>
                </div>
            </div> <!-- col.// -->
        }
        </nav> <!-- row.// -->


    </div> <!-- container .//  -->
    <style>
        .card_item {
            width: 100%;
            border: 1px solid #dbdbdb;
            border-radius: 12px;
            display: flex;
            flex-direction: column;
            align-items: center;
            max-height: 360px;
            min-height: 350px;
            padding: 20px;
            margin-bottom: 12px;
            box-shadow: 0px 10px 15px -3px rgba(0,0,0,0.1);
            transition: transform 0.4s ease;
        }

            .card_item:hover {
                transform: scale(0.9);
                transition: transform 0.4s ease;
            }

            .img-wrap img {
                height: 260px;
                object-fit: cover;
            }
    </style>
</section>
