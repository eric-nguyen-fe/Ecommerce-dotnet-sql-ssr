
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-decoration-none">Liên Hệ Với Shop</h3>
<section class="contact_area section_gap_bottom">

    <div class="container">
        <div class="row">
            <div class="col-lg-push-9">
                <div>
                    <div class="col-1">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d7838.684254869503!2d106.70676642475235!3d10.785086936675276!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1547181657956" width="1200" height="500" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div><br /><br /><br />
                </div>
            </div><br /><br /><br />
            <div class="col-lg-9">
                <form class="row contact_form" action="#" method="post" id="contactForm" novalidate="novalidate">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Họ tên</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Nguyen Van A" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="abcd@gmail.com" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'">
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            <input type="text" class="form-control" id="subject" name="subject" placeholder="Số điện thoại" onfocus="this.placeholder = ''" onblur="this.placeholder = 'NumberPhone'">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tên sản phẩm</label>
                            <textarea class="form-control" name="message" id="message" rows="1" placeholder="Nội dung" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Giá sản phẩm</label>
                            <textarea class="form-control" name="message" id="message" rows="1" placeholder="Hỏi giá" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Nội dung</label>
                            <textarea class="form-control" name="message" id="message" rows="1" placeholder="Nội dung" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'"></textarea>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <button type="submit" value="submit" class="btn btn-primary btn-block">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
